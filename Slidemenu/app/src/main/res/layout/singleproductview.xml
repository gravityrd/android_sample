<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/prod_bg">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/prod_bg">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/singleproductsview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="fill_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_gradient">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="6dp"
                            android:layout_marginBottom="18dp"
                            android:shadowColor="#000"
                            android:shadowRadius="7.0"
                            android:text="2 napja 4 órája"
                            android:textColor="@color/counter_text_color"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/product_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:singleLine="false"
                        android:text="Kadafalván építési telek eladó"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="2.0">

                    <TextView
                        android:id="@+id/product_region"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:text="Hajdú-Bihar"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:singleLine="false"
                        android:gravity="end"
                        android:text="18000000 HUF"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />


                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:example="http://schemas.android.com/apk/res/com.gravityrd.slidemenu"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"

                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <com.gravityrd.jofogas.util.ExpandablePanel
                            android:id="@+id/foo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            example:animationDuration="500"
                            example:collapsedHeight="50dip"
                            example:content="@+id/value"
                            example:handle="@+id/expand">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/value"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_alignParentStart="true"
                                    android:gravity="left"
                                    android:paddingTop="12dp"
                                    android:text="Kadafalván, Harkály utcában építési telek, jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhet.Kadafalván, Harkály utcában építési telek,jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhetKadafalván, Harkály utcában építési telek, jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhet.Kadafalván, Harkály utcában építési telek,jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhetKadafalván, Harkály utcában építési telek, jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhet.Kadafalván, Harkály utcában építési telek,jogerős építési engedéllyel eladó,Minimál stilusú családi ház tervvel. Szerződés és névre íratás után azonnal építhet."
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@id/expand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@id/value"
                                    android:src="@drawable/ic_action_expand" />
                            </RelativeLayout>
                        </com.gravityrd.jofogas.util.ExpandablePanel>
                    </LinearLayout>
                </ScrollView>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:weightSum="2.0">

                    <Button
                        android:id="@+id/Button02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawableLeft="@drawable/ic_action_call"

                        android:text="Hivás  "></Button>

                    <Button
                        android:id="@+id/Button03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:drawableLeft="@drawable/ic_action_mail"
                        android:text="Üzenet"></Button>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:text="További ajánlataink:"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/productpage_item1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/proba">

                        <ImageView
                            android:id="@+id/itempage_imageView1"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="3dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="160dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itempage_imageView1"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="12dp"
                            android:duplicateParentState="true"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:singleLine="true"

                                android:text="Eladó laptopok"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="150000 HUF"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/productpage_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/proba"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/itempage_imageView2"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="3dp"
                            android:adjustViewBounds="true"
                            android:duplicateParentState="true"
                            android:maxHeight="160dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itempage_imageView2"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="12dp"
                            android:duplicateParentState="true"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:duplicateParentState="true"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="Eladó telefonok"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:duplicateParentState="true"
                                android:text="65000 HUF"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/productpage_item3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/proba"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/itempage_imageView3"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="3dp"
                            android:adjustViewBounds="true"
                            android:duplicateParentState="true"
                            android:maxHeight="160dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itempage_imageView3"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="12dp"
                            android:duplicateParentState="true"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:duplicateParentState="true"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="Házikészitésü hangfal eladó"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#ccc" />

                            <TextView
                                android:id="@+id/itempage_price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:duplicateParentState="true"
                                android:text="25000 HUF"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ccc"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />
</android.support.v4.widget.DrawerLayout>